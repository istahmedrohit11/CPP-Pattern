#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter any number: ";
    cin>>n;
    for(int i=0;i<n;i++){
        for(int j=n;j>i+1;j--){
            cout<<"*"<<" ";
        }
        for(int j=0;j<i+1;j++){
            cout<<j+1<<" ";
        }
        for(int j=i;j>=1;j--){
         cout<<j+1<<" ";
             
    }
    cout<<"\n";
}

}
