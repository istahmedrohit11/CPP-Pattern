Enter N: 5
11111
 2222
  333
   44
    5

#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter N :";
    cin>>n;
    for(int row=0;row<n;row++){
        for(int col=0;col<row;col++){
            cout<<" ";
        }
        for(int col=0;col<n-row;col++){
            cout<<(row+1);
        }
        cout<<"\n";
    }
    return 0;
}
